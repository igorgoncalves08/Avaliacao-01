<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7097A8"
        android:backgroundTint="#C8B5B5"
        tools:context=".MainActivity"><![CDATA[

        />

        ]]>

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="307dp"
            android:layout_height="42dp"
            android:layout_marginTop="224dp"
            android:ems="10"
            android:inputType="text"
            android:text="Email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextText2"
            android:layout_width="307dp"
            android:layout_height="42dp"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:inputType="text"
            android:text="Senha"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextText" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="#000000"
            android:textColorHighlight="#1E51E9"
            android:textColorHint="#9F2121"
            android:textColorLink="#F8F5F5"
            android:textSize="40dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/editTextText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.52" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="148dp"
            android:layout_height="23dp"
            android:layout_marginBottom="180dp"
            android:text="Realizar cadastro"
            android:textColor="#070707"
            android:textColorHighlight="#FBFBFB"
            android:textColorHint="#FFFCFC"
            android:textColorLink="#F6F6F6"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView6"
            app:layout_constraintHorizontal_bias="0.69"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonIniciarSegundaTela"
            app:layout_constraintVertical_bias="0.172" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="148dp"
            android:layout_height="23dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="180dp"
            android:text="Redefinir senha"
            android:textColor="#070707"
            android:textColorHighlight="#FBFBFB"
            android:textColorHint="#FFFCFC"
            android:textColorLink="#F6F6F6"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonIniciarSegundaTela"
            app:layout_constraintVertical_bias="0.172" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#C8B5B5"
            android:src="@android:drawable/checkbox_off_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textView7"
            app:layout_constraintHorizontal_bias="0.231"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintVertical_bias="0.369" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="243dp"
            android:layout_height="86dp"
            android:layout_marginEnd="44dp"
            android:layout_marginBottom="40dp"
            android:background="#C8B5B5"
            android:backgroundTint="#C8B5B5"
            android:text="Eu li com atenção os termos de uso e aceito os termos criados no dia 25/09/2023  feito pelo aluno Allison Freitas, aluno do UNIS que cursa Ciências da computação. "
            android:textAlignment="viewStart"
            android:textColor="#050505"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonIniciarSegundaTela"
            app:layout_constraintVertical_bias="0.741" />

        <ImageView

            android:id="@+id/icNavegar"
            android:layout_width="123dp"
            android:layout_height="75dp"
            android:baselineAligned="false"
            android:src="@drawable/ic_navegar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.588" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
